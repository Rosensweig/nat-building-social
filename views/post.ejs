<!-- views/post.ejs -->
<!doctype html>
<html lang="en">
<head>
    <title>Natural Building Social — New Post</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
<main>
<%- include('partials/nav.ejs', {user: user}) %>
<div class="container">
    
            <h1>Natural Building Social — New Post</h1>

    <div class="postCont">
        <form action="/post" enctype="multipart/form-data" method="post">
            <label for="imageInput">Add Image(s): 
            <input type="file" name="imageInput" id="imageInput" size="50" multiple="multiple" accept="image/*"></label>
            <input type="text" name="title" id="title" size="50" placeholder="Enter Title">
            <textarea rows="10" cols="50" name="content" id="content" placeholder="Enter post text here." required="required"></textarea>
            <button type="submit">Post</button>
        </form>
    </div>
</div>
</main>
</body>
</html>